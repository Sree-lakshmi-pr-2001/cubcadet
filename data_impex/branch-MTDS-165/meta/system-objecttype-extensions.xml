<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
    <type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="dealerSearchRefinements">
                <display-name xml:lang="x-default">Dealer Search Refinements</display-name>
                <description xml:lang="x-default">Define dealer search refinement values (JSON)</description>
                <type>text</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
            <attribute-definition attribute-id="residentialProductsMapping">
                <display-name xml:lang="x-default">Residential Products Mapping</display-name>
                <description xml:lang="x-default">Define which product codes are grouped as Residential Products for the purposes of dealer search refinements.</description>
                <type>set-of-string</type>
                <externally-managed-flag>false</externally-managed-flag>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Store">
                <display-name xml:lang="x-default">Store</display-name>
                <attribute attribute-id="defaultStoreLogoImage"/>
                <attribute attribute-id="dealerSearchRefinements"/>
                <attribute attribute-id="residentialProductsMapping"/>
            </attribute-group>
        </group-definitions>
    </type-extension>
</metadata>
