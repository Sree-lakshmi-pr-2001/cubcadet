{
    "step-types": {
        "script-module-step": [{
                "@type-id": "custom.CSComponents.UnzipFiles",
                "module": "mtd_bm_customizations/cartridge/scripts/jobsteps/Unzip.js",
                "description": "Unzip files",
                "function": "Run",
                "parameters": {
                    "parameter": [{
                            "@name": "FilePattern",
                            "description": "File pattern (Regular Expression)",
                            "@type": "string",
                            "@required": "false",
                            "@trim": "true"
                        },
                        {
                            "@name": "SourceFolder",
                            "@type": "string",
                            "@required": "true",
                            "@trim": "true",
                            "description": "Source folder path",
                            "default-value": "IMPEX/src/mySourceFolder"
                        },
                        {
                            "@name": "TargetFolder",
                            "@type": "string",
                            "@required": "true",
                            "@trim": "true",
                            "description": "Target folder path",
                            "default-value": "IMPEX/src/myTargetFolder"
                        },
                        {
                            "@name": "DeleteZipFile",
                            "description": "If set to true, remove zip file after extraction",
                            "@type": "boolean",
                            "@required": false,
                            "@trim": true
                        },
                        {
                            "@name": "NoFileFoundStatus",
                            "@type": "string",
                            "@required": true,
                            "@trim": true,
                            "enum-values": {
                                "value": [
                                    "OK",
                                    "ERROR"
                                ]
                            },
                            "description": "No files found exit code"
                        },
                        {
                            "@name": "IsDisabled",
                            "description": "Mark the step as disabled. This will skip the step and returns a OK status",
                            "@type": "boolean",
                            "@required": false,
                            "@trim": true
                        }
                    ]
                },
                "status-codes": {
                    "status": [{
                            "@code": "ERROR",
                            "description": "Used when an error occurred."
                        },
                        {
                            "@code": "OK",
                            "description": "Used when execution was successful."
                        },
                        {
                            "@code": "NO_FILE_FOUND",
                            "description": "Used when no file could be found in the source directory."
                        }
                    ]
                }
            }
            ,
            {
                "@type-id": "custom.CSComponents.SendOcapiOrderConfirmations",
                "@supports-site-context": true,
                "@supports-organization-context": false,
                "module": "mtd_bm_customizations/cartridge/scripts/jobsteps/OcapiOrderConfirmations.js",
                "description": "Send Order Confirmatio Emails for OCAPI Placed Orders",
                "function": "Run",
                "parameters": {
                    "parameter": [{
                            "@name": "Status",
                            "description": "File pattern (Regular Expression)",
                            "@type": "string",
                            "@required": "false",
                            "@trim": "true"
                        }
                    ]
                },
                "status-codes": {
                    "status": [{
                            "@code": "ERROR",
                            "description": "Used when an error occurred."
                        },
                        {
                            "@code": "OK",
                            "description": "Used when execution was successful."
                        },
                        {
                            "@code": "NO_FILE_FOUND",
                            "description": "Used when no file could be found in the source directory."
                        }
                    ]
                }
            }

        ]
    }
}
