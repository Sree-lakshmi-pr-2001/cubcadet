<div class="container-fluid compare-bar-wrapper hidden-xs-down">
    <div class="row">
        <div class="container compare-bar"
            data-max-slots="${pdict.maxSlots}"
            data-min-products-msg="${Resource.msg('text.productcompare.select2', 'product', null)}">
            <form method="GET" class="compare-products-form" name="compare-products" action="${URLUtils.url('Compare-Show')}">
                <div class="row align-items-center">
                    <div class="col-12 col-md-8">
                        <div class="row align-items-center product-slots"></div>
                    </div>
                    <div class="col-6 col-md-2 action">
                        <button type="submit" class="compare btn btn-primary">${Resource.msgf('button.compare', 'product', null, ' ')}</button>
                    </div>
                    <div class="col-6 col-md-2 action">
                        <a href="${'#'}" class="clear-all">${Resource.msg('link.clearall', 'product', null)}</a>
                    </div>
                </div>
                <input type="hidden" name="cgid" />
                <input type="hidden" name="backUrl" />
            </form>
        </div>
    </div>
</div>
