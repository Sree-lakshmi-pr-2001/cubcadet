<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">

    <!-- get user email for order contact -->
    <field formid="email" label="profile.email" type="string" mandatory="true" binding="email"
        regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
        parse-error="error.email.mismatch"
        max-length="50" missing-error="error.card.info.missing.email" />

    <!-- optional flags -->
    <field formid="emailSignup" label="check.gift" type="boolean" checked="false" default-value="false" binding="emailSignup" mandatory="false" />

    <!-- future input
    <field formid="autoRegister" label="check.gift" type="boolean" checked="false" default-value="false" binding="autoRegister" mandatory="false" />
    -->

</form>
