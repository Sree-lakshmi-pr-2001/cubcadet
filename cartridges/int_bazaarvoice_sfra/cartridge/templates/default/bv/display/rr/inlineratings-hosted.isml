<!--- TEMPLATENAME: inlineratings-hosted.isml --->

<isif condition="${pdict.bvDisplay && pdict.bvDisplay.rating && pdict.bvDisplay.rating.enabled && pdict.bvDisplay.rating.type.equals('hosted')}">
	<isif condition="${pdict.bvDisplay.bvPid}">
		<div class="js-bv-ratings" data-bv-show="inline_rating" ${(pdict.display && pdict.display.bvSeo === false) || pdict.bvDisplay.bvSeo === false ? 'data-bv-seo=false' : ''} data-bv-productId="${pdict.bvDisplay.bvPid}" data-bv-redirect-url="${pdict.urls ? pdict.urls.product : ''}"></div>
	</isif>
</isif>
